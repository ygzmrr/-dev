package Denem1;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

        System.out.println("Bir sayı giriniz: ");
        double sayi = scanner.nextDouble();

        if (sayi > 0) {
            System.out.println("Girmiş olduğunuz sayı pozitif.");
        } else if (sayi < 0) {
            System.out.println("Girmiş olduğunuz sayı negatif.");
        } else {
            System.out.println("Girmiş olduğunuz sayı sıfır.");
        }
		

	}

}
